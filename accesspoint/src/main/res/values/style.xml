<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Toolbar     -->
    <style name="ActionBar.XenonCollapsedTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBar.XenonExpanedTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
    </style>

    <!--    Bottomsheet     -->
    <style name="XenonFloatingBottomSheetDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--    Inputfield      -->
    <style name="XenonInputFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:elevation">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:backgroundTint">@color/textfield_color</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHighlight">@color/primary</item>
    </style>


    <style name="SettingsTitle">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingTop">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTile">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
    </style>

    <style name="SettingsSelectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>
    <style name="SettingsSelectionSwitches">
        <item name="android:paddingStart">@dimen/border_margin</item>
        <item name="android:paddingEnd">@dimen/border_margin</item>
        <item name="android:paddingBottom">@dimen/border_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="SettingsSelectionValue">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>
